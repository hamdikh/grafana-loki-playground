logging {
  level  = "info"
  format = "logfmt"
}

loki.source.file "fleet_logs" {
  targets    = ["./fleet_logs.log"]
  forward_to = [loki.write.default.receiver]

  labels = {
    job = "flotte-interstellaire"
  }
}

loki.write "default" {
  endpoint {
    url = "http://localhost:3100/loki/api/v1/push"
  }
}

